                                <li>@Html.ActionLink("Burger", "GetItems", "order", new { selectedMenuItem = "Other" }, null)</li>
                                <li>@Html.ActionLink("Wrap", "GetItems", "order", new { selectedMenuItem = "Wrap" }, null)</li>
                                <li>@Html.ActionLink("Soup", "GetItems", "order", new { selectedMenuItem = "Soup" }, null)</li>
                                <li>@Html.ActionLink("Snacks", "GetItems", "order", new { selectedMenuItem = "Snacks" }, null)</li>
