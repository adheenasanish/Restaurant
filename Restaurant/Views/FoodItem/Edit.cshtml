@model Restaurant.Models.FoodItem

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                @*<img src="Image" width="230" height="230" style="border:1px solid gray" ; />*@

                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemCategory" class="control-label"></label>
                @Html.DropDownList("ItemCategory",
                     new SelectList(ViewBag.CategoryListss, "Value", "Text",@ViewData["categoryResult"]),
                     "Select Food Category",
                     new { @id = "idDD", @class = "form-control" })
                <span asp-validation-for="ItemCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FoodType" class="control-label"></label>
                @Html.DropDownList("Food Type",
                          new SelectList(ViewBag.TypeLists, "Value", "Text", @ViewData["itemType"]),
                          "Select Food Type ",
                          new { @id = "idDD", @class = "form-control" })
                @*<input asp-for="Type" class="form-control" />*@
                <span asp-validation-for="FoodTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
